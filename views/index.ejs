<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"
    ></script>
    <title>Home | Refugee POC</title>
  </head>
  <body>
    <div class="container my-5">
      <div class="row justify-content-center">
        <form class="col-12 col-md-8" method="post" action="/add/refugee">
          <div class="mb-2">
            <label for="fullName"> Full Name </label>
            <input
              type="text"
              name="fullName"
              id="fullName"
              class="form-control"
              required
            />
          </div>

          <div class="card mb-2">
            <div class="card-header">
              <h5 class="card-title mb-0">Floor Preference</h5>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label for="first-choice">1<sup>st</sup> Preference</label>
                <select
                  class="form-control"
                  name="firstChoice"
                  id="first-choice"
                  required
                >
                  <option selected disabled value="">-</option>
                  <option value="base2">Basement 2</option>
                  <option value="base1">Basement 1</option>
                  <option value="ground">Ground Floor</option>
                  <option value="floor1">First Floor</option>
                  <option value="floor2">Second Floor</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="second-choice">2<sup>nd</sup> Preference</label>
                <select
                  class="form-control"
                  name="secondChoice"
                  id="second-choice"
                  required
                >
                  <option selected disabled value="">-</option>
                  <option value="base2">Basement 2</option>
                  <option value="base1">Basement 1</option>
                  <option value="ground">Ground Floor</option>
                  <option value="floor1">First Floor</option>
                  <option value="floor2">Second Floor</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="third-choice">3<sup>rd</sup> Preference</label>
                <select
                  class="form-control"
                  name="thirdChoice"
                  id="third-choice"
                  required
                >
                  <option selected disabled value="">-</option>
                  <option value="base2">Basement 2</option>
                  <option value="base1">Basement 1</option>
                  <option value="ground">Ground Floor</option>
                  <option value="floor1">First Floor</option>
                  <option value="floor2">Second Floor</option>
                </select>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary px-5">Submit</button>
        </form>
      </div>
    </div>
  </body>
  <script>
    (() => {
      const firstChoice   = document.getElementById("first-choice");
      const secondChoice  = document.getElementById("second-choice");
      const thirdChoice   = document.getElementById("third-choice");

      firstChoice.addEventListener("change", ({ target: {selectedIndex} }) => {
        secondChoice.options[selectedIndex].disabled = true;
        thirdChoice.options[selectedIndex].disabled = true;
      });

      secondChoice.addEventListener("change", ({ target: {selectedIndex} }) => {
        firstChoice.options[selectedIndex].disabled = true;
        thirdChoice.options[selectedIndex].disabled = true;
      });

      thirdChoice.addEventListener("change", ({ target: {selectedIndex} }) => {
        firstChoice.options[selectedIndex].disabled = true;
        secondChoice.options[selectedIndex].disabled = true;
      });
    })();
  </script>
</html>
